@model IEnumerable<Business_address.Models.Business>

@{
    ViewBag.Title = "Registro General de Empresa";
}

<h2>Registro General de Empresa</h2>

<p>
    @Html.ActionLink("Nueva Empresa", "Create")
</p>

@if(Model.Count() > 0) { 

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RNC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RNC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
           @* @Html.ActionLink("Editar (Mantenimiento)", "Edit", new { id=item.Id, @class= "text-warning" }) |*@
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }) | 
            @Html.ActionLink("Clientes Asociado", "BusinessClients", new { id = item.Id })
        </td>
    </tr>
}

</table>


}else
{
    <div class="jumbotron">
        <h1>No existen registro</h1>
    </div>
}